{
	"webroot": "wwwroot",
	"version": "1.0.0-rc2-*",
    "compilationOptions": {
        "emitEntryPoint": true,
		"preserveCompilationContext": true
    },

	"dependencies": {		
		"Microsoft.AspNetCore.Server.IISIntegration": "1.0.0-rc2-*",
		"Microsoft.AspNetCore.Server.Kestrel": "1.0.0-rc2-*",
		"Microsoft.AspNetCore.Diagnostics": "1.0.0-rc2-*",
		"Microsoft.Extensions.Configuration.Binder": "1.0.0-rc2-*",

		"Odachi.AspNetCore.Authentication.Basic": "1.0.0-rc2-*"
	},

	"commands": {
		"web": "Microsoft.AspNetCore.Server.Kestrel"
	},

	"frameworks": {
		"net451": { },
		"netcoreapp1.0": {
			"imports": [
				"portable-net45+wp80+win8+wpa81+dnxcore50"
			],
			"dependencies": {
				"Microsoft.NETCore.App": {
					"version": "1.0.0-rc2-*",
					"type": "platform"
				}
			}
		}
	},
	
	"content": [
		"config.json"
	],

	"publishExclude": [
		"node_modules",
		"bower_components",
		"**.xproj",
		"**.user",
		"**.vspscc"
	],
	"exclude": [
		"wwwroot",
		"node_modules",
		"bower_components"
	]
}